{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
	"_artifactsLocationSasToken": {
	    "type": "securestring",
            "defaultValue": ""
        },
        "rgName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Name for the Log Analytics workspace"
            }
        },
        "enableDataConnectors": {
            "type": "array",
            "metadata": {
                "description": "The kind of data connectors that can be deployed via ARM templates are the following: [\"AzureActivityLog\",\"SecurityInsightsSecurityEventCollectionConfiguration\",\"WindowsFirewall\",\"DnsAnalytics\"], Reference: https://docs.microsoft.com/azure/templates/microsoft.operationalinsights/2020-03-01-preview/workspaces/datasources#microsoftoperationalinsightsworkspacesdatasources-object"
            },
            "defaultValue": []
        },
        "severityLevels": {
            "type": "array",
            "metadata": {
                "description": "Severity levels desired for Analytics Rules"
            },
            "defaultValue": []
        },
        "dataRetention": {
            "type": "int",
            "minValue": 7,
            "maxValue": 730,
            "metadata": {
                "description": "Number of days of retention. Workspaces in the legacy Free pricing tier can only have 7 days."
            },
            "defaultValue": 90
        },
        "immediatePurgeDataOn30Days": {
            "type": "bool",
            "metadata": {
                "description": "If set to true when changing retention to 30 days, older data will be immediately deleted. Use this with extreme caution. This only applies when retention is being set to 30 days."
            },
            "defaultValue": true
        },
        "enableSolutions1P": {
            "type": "array",
            "metadata": {
                "description": "The list of Content Hub 1st party solutions to deploy."
            },
            "defaultValue": []
        },
        "aadStreams": {
            "type": "array",
            "metadata": {
                "description": "The list of data types to enable for Azure AD connector"
            },
            "defaultValue": []
        },
        "enableUeba": {
            "type": "bool",
            "metadata": {
                "description": "Whether or not UEBA should be enabled"
            },
            "defaultValue": true
        },
        "identityProviders": {
            "type": "array",
            "metadata": {
                "description": "Array of identity providers to be synched with UEBA. Valid identity providers are 'ActiveDirectory' and 'AzureActiveDirectory'"
            },
            "defaultValue": []
        },
        "enableDiagnostics": {
            "type": "bool",
            "metadata": {
                "description": "When true, enables both Sentinel health diagnostic settings (Automation, DataConnectors, Analytics) and Log Analytics workspace diagnostic settings (Audit, Jobs, SummaryLogs)."
            }
        },
        "deployLighthouse": {
            "type": "bool",
            "metadata": {
                "description": "When true, deploys Azure Lighthouse to onboard the resource group for managed service provider access."
            },
            "defaultValue": false
        },
        "enablePartnerLink": {
            "type": "bool",
            "metadata": {
                "description": "When true, links the partner MPN ID to this subscription (Partner Admin Link / PAL). Requires Contributor on the subscription. A dedicated managed identity is created to perform the link."
            },
            "defaultValue": false
        },
        "partnerMpnId": {
            "type": "string",
            "metadata": {
                "description": "Partner MPN ID to link (e.g. 6125666 for United States, 54484777 for Canada). Used when enablePartnerLink is true."
            },
            "defaultValue": ""
        },
        "enablePlaybookIdentity": {
            "type": "bool",
            "metadata": {
                "description": "When true, creates a user-assigned managed identity named bv-mi-playbook in the resource group with Log Analytics Reader role on the workspace."
            },
            "defaultValue": false
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources"
            },
            "defaultValue": "https://raw.githubusercontent.com/steveienciu/SentinelStuff/main/"
        }
    },
    "variables": {
        "partnerLinkRoleAssignmentGuid": "[guid(concat(subscription().subscriptionId, parameters('rgName'), 'partnerlink-contributor'))]"
    },
    "resources": [
        {
            "condition": "[parameters('deployLighthouse')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "name": "lighthouseDeployment",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/steveienciu/SentinelStuff/main/lighthouse/bv_sentinel_lighthouse_template_rg.json"
                },
                "parameters": {
                    "rgName": {
                        "value": "[parameters('rgName')]"
                    },
                    "mspOfferName": {
                        "value": "BlueVoyant Azure Sentinel MSSP"
                    },
                    "mspOfferDescription": {
                        "value": "BlueVoyant Managed Security Services"
                    },
                    "managedByTenantId": {
                        "value": "172f0077-e962-407c-86e2-20b3cd881b2c"
                    },
                    "authorizations": {
                        "value": [
                            {
                                "principalId": "35d106a1-c847-4b39-8cf2-0c0358a1d89b",
                                "principalIdDisplayName": "BlueVoyant SOC Analysts",
                                "roleDefinitionId": "3e150937-b8fe-4cfb-8069-0eaf05ecd056"
                            },
                            {
                                "principalId": "9088d8a2-760c-484c-8753-8f787c970121",
                                "principalIdDisplayName": "BlueVoyant SOC Engineering",
                                "roleDefinitionId": "b24988ac-6180-42a0-ab88-20f7382dd24c"
                            },
                            {
                                "principalId": "8aabcc7b-27bb-49fa-bcf7-e5f2e8a2e444",
                                "principalIdDisplayName": "BlueVoyant Client Success Team",
                                "roleDefinitionId": "8d289c81-5878-46d4-8554-54e1e3d8b5cb"
                            },
                            {
                                "principalId": "47464d21-730e-45b0-b230-8124d48b9949",
                                "principalIdDisplayName": "BlueVoyant Sentinel Automation Rules Engineering",
                                "roleDefinitionId": "f4c81013-99ee-4d62-a7ee-b3f1f648599a"
                            },
                            {
                                "principalId": "9088d8a2-760c-484c-8753-8f787c970121",
                                "principalIdDisplayName": "BlueVoyant MSP Operators",
                                "roleDefinitionId": "91c1777a-f3dc-4fae-b103-61d183457e46"
                            }                  
                        ]
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2020-06-01",
            "name": "[parameters('rgName')]",
            "location": "[parameters('location')]",
            "properties": {}
        },
        {
            "name": "workspaceCreation",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2023-07-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups',parameters('rgName'))]"
            ],
            "resourceGroup": "[parameters('rgName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), 'LinkedTemplates/workspace.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "dataRetention": {
                        "value": "[parameters('dataRetention')]"
                    },
                    "immediatePurgeDataOn30Days": {
                        "value": "[parameters('immediatePurgeDataOn30Days')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "settings",
            "apiVersion": "2023-07-01",
            "dependsOn": [
                "workspaceCreation"
            ],
            "resourceGroup": "[parameters('rgName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), 'LinkedTemplates/settings.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "enableUeba": {
                        "value": "[parameters('enableUeba')]"
                    },
                    "identityProviders": {
                        "value": "[parameters('identityProviders')]"
                    },
                    "enableDiagnostics": {
                        "value": "[parameters('enableDiagnostics')]"
                    }
                }
            }
        },
        {
            "condition": "[parameters('enableDiagnostics')]",
            "type": "Microsoft.Resources/deployments",
            "name": "workspaceDiagnostics",
            "apiVersion": "2023-07-01",
            "dependsOn": [
                "workspaceCreation"
            ],
            "resourceGroup": "[parameters('rgName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), 'LinkedTemplates/workspaceDiagnostics.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    }
                }
            }
        },
        {
            "condition": "[parameters('enablePlaybookIdentity')]",
            "name": "playbookIdentity",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2023-07-01",
            "dependsOn": [
                "workspaceCreation"
            ],
            "resourceGroup": "[parameters('rgName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), 'LinkedTemplates/playbookIdentity.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "condition": "[and(parameters('enablePartnerLink'), not(empty(parameters('partnerMpnId'))))]",
            "name": "partnerLinkIdentity",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2023-07-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', parameters('rgName'))]"
            ],
            "resourceGroup": "[parameters('rgName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), 'LinkedTemplates/partnerLinkIdentity.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "condition": "[and(parameters('enablePartnerLink'), not(empty(parameters('partnerMpnId'))))]",
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2022-04-01",
            "name": "[variables('partnerLinkRoleAssignmentGuid')]",
            "dependsOn": [
                "partnerLinkIdentity"
            ],
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c')]",
                "principalId": "[reference('partnerLinkIdentity').outputs.principalId.value]",
                "principalType": "ServicePrincipal"
            }
        },
        {
            "condition": "[and(parameters('enablePartnerLink'), not(empty(parameters('partnerMpnId'))))]",
            "name": "partnerLinkScript",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2023-07-01",
            "dependsOn": [
                "[variables('partnerLinkRoleAssignmentGuid')]"
            ],
            "resourceGroup": "[parameters('rgName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), 'LinkedTemplates/partnerLink.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "rgName": {
                        "value": "[parameters('rgName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "partnerMpnId": {
                        "value": "[parameters('partnerMpnId')]"
                    },
                    "identityName": {
                        "value": "[reference('partnerLinkIdentity').outputs.identityName.value]"
                    }
                }
            }
        },
        {
            "condition": "[not(empty(parameters('enableDataConnectors')))]",
            "name": "enableDataConnectors",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2023-07-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "workspaceCreation",
                "enableSolutionsAndAlerts"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), 'LinkedTemplates/dataConnectors.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "dataConnectorsKind": {
                        "value": "[parameters('enableDataConnectors')]"
                    },
                    "aadStreams": {
                        "value": "[parameters('aadStreams')]"
                    },
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "tenantId": {
                        "value": "[subscription().tenantId]"
                    },
                    "subscriptionId": {
                        "value": "[subscription().subscriptionId]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "condition": "[not(empty(parameters('enableSolutions1P')))]",
            "name": "enableSolutionsAndAlerts",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2023-07-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "workspaceCreation",
                "[resourceId('Microsoft.Resources/resourceGroups',parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), 'LinkedTemplates/solutionsAndAlerts.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "enableSolutions1P": {
                        "value": "[replace(replace(string(parameters('enableSolutions1P')),'[',''),']','')]"
                    },
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "severityLevels": {
                        "value": "[replace(replace(string(parameters('severityLevels')),'[',''),']','')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "workspaceName": {
            "type": "string",
            "value": "[parameters('workspaceName')]"
        },
        "dataConnectorsList": {
            "type": "string",
            "value": "[replace(replace(string(parameters('enableDataConnectors')),'\"',''),'[','')]"
        }
    }
}
